{
  "name": "github-snippets",
  "version": "1.0.0",
  "displayName": "GitHub Snippets",
  "author": "Nanashi. <@sevenc-nanashi>",
  "description": "Adds a section to copy text in GitHub repository page.",
  "scripts": {
    "build": "tsc && vite build",
    "watch": "vite build --watch",
    "dev": "vite",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://google.com\" --source-dir ./dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^2.0.0",
    "@types/chrome": "^0.0.196",
    "@types/node": "^18.8.3",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2",
    "vite": "~3.1.0",
    "web-ext": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.2.40",
    "webextension-polyfill": "^0.10.0"
  }
}
